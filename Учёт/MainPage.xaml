                   Margin="33,67,67,0"
                   VerticalAlignment="Top"
                   FontFamily="Century Gothic"
                   FontSize="32"
                   Text="Введите данные"
                   TextWrapping="Wrap" />
        <Button x:Name="Go_btn"
                Width="115"
                Height="98"
                Margin="0,167,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Go_btn_Click"
                Content="Рассчитать" />

    </Grid>
</Page>
